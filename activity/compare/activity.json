{
  "name": "compare",
  "author": "Andy Hampshire",
  "type": "flogo:activity",
  "ref": "github.com/ayh20/flogo-components/activity/compare",
  "version": "0.0.2",
  "title": "Compare utility",
  "description": "Value Compare Tool",
  "homepage": "https://github.com/ayh20/flogo-components/tree/master/activity/compare",
  "inputs":[
    {
      "name": "input1",
      "required": true,
      "type": "string"
    },
    {
      "name": "input2",
      "required": true,
      "type": "string"
    },
    {
      "name": "comparemode",
      "required": true,
      "type": "string",
      "display": 
      {
          "type":"dropdown",
          "selection":"single"
      },
      "allowed" : [">", "<", "=", "==", ">=", "<=", "!=" ]
    }
  ],
  "outputs": [
    {
      "name": "result",
      "type": "boolean"
    },
    {
      "name": "negativeresult",
      "type": "boolean"
    }
  ]
}
